---
import "../styles/global.css";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/knowhow_logo_green-800.svg" />
    <title>{title}</title>
    <meta
      name="description"
      content="Know How Soluciones Agrícolas - Especialistas en certificaciones orgánicas de aguacate en México"
    />
  </head>
  <body>
    <slot />
  </body>
</html>
